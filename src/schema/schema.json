{
  "id": "employeeForm",
  "title": "Employee Onboarding",
  "fields": [
    {
      "id": "fullName",
      "type": "text",
      "label": "Full Name",
      "placeholder": "Enter your full name",
      "required": true
    },
    {
      "id": "department",
      "type": "dropdown",
      "label": "Department",
      "options": ["HR", "IT", "Finance"],
      "required": true
    },
    {
      "id": "password",
      "type": "password",
      "label": "Password",
      "placeholder": "Enter your password",
      "required": true
    },
    {
      "id": "email",
      "type": "email",
      "label": "Email",
      "placeholder": "xyz@email.com",
      "required": true
    },
    {
      "id": "joiningDate",
      "type": "date",
      "label": "Joining Date",
      "required": true,
      "visibilityCondition": {
        "field": "department",
        "value": "HR"
      }
    },
    {
      "id": "gender",
      "type": "radio",
      "label": "Gender",
      "options": ["Male", "Female", "Other"],
      "required": true
    },
    
{
      "id": "state",
      "type": "dropdown",
      "label": "State",
      "optionsMap": {
        "India": ["Gujarat", "Madhya Pradesh", "Rajasthan", "Delhi"],
        "USA": ["California", "Texas", "New York", "Washington"],
        "Canada": [ "Quebec", "British Columbia"]
      },
      "required": true,
      "visibilityCondition": {
        "field": "country",
        "valueIn": ["India", "USA", "Canada"]
      }
    },
    
    {
      "id": "about",
      "type": "textarea",
      "label": "About",
      "placeholder": "write something..... about yourself",
      "required": true
    }
  ]
}
